<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - Admin Panel' : 'Admin Panel' %></title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Admin CSS -->
    <link rel="stylesheet" href="/css/admin.css">
    
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Panel</h2>
                <button class="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="/admin/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">
                            <i class="fas fa-tachometer-alt"></i>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/admin/courses" class="<%= currentPage === 'courses' ? 'active' : '' %>">
                            <i class="fas fa-book"></i>
                            Kurslar
                        </a>
                    </li>
                    <li>
                        <a href="/admin/teachers" class="<%= currentPage === 'teachers' ? 'active' : '' %>">
                            <i class="fas fa-chalkboard-teacher"></i>
                            Öğretmenler
                        </a>
                    </li>
                    <li>
                        <a href="/admin/announcements" class="<%= currentPage === 'announcements' ? 'active' : '' %>">
                            <i class="fas fa-bullhorn"></i>
                            Duyurular
                        </a>
                    </li>
                    <li>
                        <a href="/admin/gallery" class="<%= currentPage === 'gallery' ? 'active' : '' %>">
                            <i class="fas fa-images"></i>
                            Galeri
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <a href="/admin/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Çıkış Yap
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="main-header">
                <div class="header-left">
                    <button class="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1><%= title %></h1>
                </div>
                <div class="header-right">
                    <a href="/" class="view-site" target="_blank">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Siteyi Görüntüle</span>
                    </a>
                </div>
            </div>

            <!-- Flash Messages -->
            <% if(typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            
            <% if(typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
                <div class="alert alert-error">
                    <%= messages.error %>
                </div>
            <% } %>

            <!-- Page Content -->
            <%- body %>
        </main>
    </div>

    <!-- Admin JS -->
    <script src="/js/admin.js"></script>
    <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html> 