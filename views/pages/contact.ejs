      <!-- Sağ Kolon - İletişim Bilgileri -->
      <div class="contact-info-grid">
        <div class="contact-info-card">
          <div class="contact-card-header">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Adres</h3>
